<style>

.divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
.h-custom {
height: calc(100% - 73px);
}

.input-icon-container{
  display: flex;
  flex-direction: row;
  border-radius: 5px;

  align-items : center;
  overflow: hidden;
}
@@media (max-width: 450px) {
.h-custom {
height: 100%;
}
}
.img-pic.container {
  position: relative;
  text-align: center;
  color: white;
}
.custom-container {
  position: relative;
  text-align: center;
  color: rgb(253, 253, 253);
}
.custom-container img {
  width: 200%; /* Increase the width of the image */
  height: auto; /* Automatically adjust the height to maintain the aspect ratio */
}
.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.img-fluid{
    transform: scale(110%);
    padding-top: 5%;
    object-fit: cover
}
.bsignup{
    background-color: Transparent;

}
</style>

<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5 custom-container">
        <img src="~/assets/images/signup1.png"
          class="img-fluid" alt="Sample image">
          <div class="centered">
                <h1 class="img-pic">New Member</h1>
          <p>Register and discover<br>
        our great service and boost<br>
        your Business</p>
        <a type="button" class="btn btn-dark btn-block col-12 bsignup" asp-area="" asp-controller="User" asp-action="signup">
            @* style="margin-bottom:1.5rem;padding-top: 0.5rem;padding-bottom:0.5rem;border: 2px solid #cecece;" *@
            Sign Up</a>
          </div>

      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <h1>User Login</h1>
        <p>Welcome to AOS</p>
        <form>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">

          </div>



          <!-- Email input -->
          <div class="mb-4">
            <input type="email" class="form-control form-control-lg"
              placeholder="Email address" />

          </div>

          <!-- Password input -->
          <div class="input-icon-container mb-4" >
            <input type="password" class="form-control form-control-lg"
              placeholder="Password" />
              <i class="fa fa-lock"></i>
          </div>


          <div class="divider d-flex align-items-center my-4">
            <p class="text-center mx-3 mb-0">OR</p>
          </div>


          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="button" class="btn btn-light btn-block btn-lg col-12"
            style="margin-bottom:1.5rem;border: 2px solid #cecece;"
            ><i class="fa fa-google" aria-hidden="true"></i> Sign in with Google</button>
              </div>
              <div>
                <button type="button" class="btn btn-danger btn-block btn-lg col-12"
                style="margin-bottom:0.5rem;">Login</button>

              </div>
              <div>
            @* <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="#!"
                class="link-danger">Register</a></p> *@
          </div>

        </form>
      </div>
    </div>
  </div>
    <!-- Copyright -->

    <!-- Right -->
    <div>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-facebook-f"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-twitter"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-google"></i>
      </a>
      <a href="#!" class="text-white">
        <i class="fab fa-linkedin-in"></i>
      </a>
    </div>
    <!-- Right -->
  </div>
</section>