@model IEnumerable<ProductModel>
    @{
        ViewData["Title"] = "Product Page";
    }
    
    <div class="container p-6">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
            </div>
        
    <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp;Add Product</a>
    </div>
        </div>
    </div>
    <br />
    <br />
    
    <table class="table table-bordered table-stripped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Image
                </th>
                <th>
                    Price
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Id
                    </td>
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.description
                    </td>

                    <td width="30%">
                        @obj.ImageFile
                    </td>

                    <td width="30%">
                        @obj.Price
                    </td>
                    <td width="30%">
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    