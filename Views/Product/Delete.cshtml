@model ProductModel

<form method="post" asp-action="DeleteConfirm">
    <input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Product</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>

			<label asp-for="description"></label>
			<input asp-for="description" disabled class="form-control" />
			<span asp-validation-for="description" class="text-danger"></span>

            <label asp-for="ImageFile"></label>
			<input asp-for="ImageFile" disabled class="form-control" />
			<span asp-validation-for="ImageFile" class="text-danger"></span>

            <label asp-for="Price"></label>
			<input asp-for="Price" disabled class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>

			<button type ="submit" class="btn btn-danger">Delete</button>
			<a asp-controller="Product" asp-action="Index" class="btn btn-primary">Back to List</a>

		</div>
	</div>
</form>
